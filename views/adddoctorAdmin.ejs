  <script>

    /* Check whether a doctor already exits in teh DB*/
    function checkDoc (e){
      $(document).ready (()=>{
        if (e.value.length != 10){
            document.getElementById('errormsg').style.display = "block";
            document.getElementById('errormsg').innerText = "Invalid Contact Number !";
            document.getElementById('formbreakerc').value = "";
        }

        else{
          document.getElementById('errormsg').style.display = "none";
          let p = "/admin/findDoc?contact=" + e.value;
          
          $.getJSON (p,(data)=>{
            
            if (data.status){
              document.getElementById('errormsg').style.display = "none";
              document.getElementById('formbreakerc').value = "ok";
              
            }
            
            else{
              document.getElementById('errormsg').style.display = "block";
              document.getElementById('errormsg').innerText = "Doctor Already Registered";
              document.getElementById('formbreakerc').value = "";
            }
          })
        }

      })
    }
    
