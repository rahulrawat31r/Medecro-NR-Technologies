    /* For Fetching the IP address ofthe admin*/
    $(document).ready(function () {

      $.getJSON("https://api.ipify.org?format=json", function (data) {
        $('#ip').val(data.ip)
      })

    })

  

    function calling(tokenNum){
        window.location.href =`/admin/checkpatients/${tokenNum}`;
    }

    function getAppointmentsDoc(){
      const condition = document.getElementById('condition').value;
      const date = document.getElementById('date').value;
      const type = document.getElementById('type').value;

      $.getJSON(`/admin/getAppointmentsDoc/${condition}/${date}/${type}`,function(data){
        console.log(data);

        if (data.length == 0){
          alert ('No Appointments Found');
          return;
        }

        var table = $("#user-table").DataTable();

        table.destroy();

        table = document.getElementById("user-table");
        table.innerHTML = "";
        table = document.getElementById("user-table");
        //   console.log (table.innerHTML);

        for (i = 0 ; i < data.length ; i++){
          if (data[i]['visit'] == 'No'){
              data[i]['button'] = `<button onclick="calling(${data[i].token})" type="button" id="submit-btn" class="btn btn-success btn-small ms-2">Call</button>`;
            }
            
            else{
              data[i]['button'] = `<button type="button" id="submit-btn" class="btn btn-primary btn-small ms-2">Completed</button>`;
          }
        }

        table.innerHTML = `<thead class = "table-dark">
                <tr>
                  <th scope="col">Token No</th>
                    <th scope="col">Patient Name</th>
                    <th scope="col">Patient Contact Number</th>
                    <th scope="col">Doctor Name</th>
                    <th scope="col">Medical Condition</th>
                    <th scope="col">Appointment Date</th>
                    <th scope="col">Appointment Completed</th>
                    <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody id ="tableWork">
              
              </tbody>  `;

        $("#user-table").DataTable({
          dom: "Bfrtip",
          buttons: [

          ],
          responsive: true,
          data: data,
          columns: [
            { data: "token" },
            { data: "name" },
            { data: "mobile" },
            { data: "dname" },
            { data: "mcondition" },
            { data: "adate" },
            { data: "visit" },
            { data: "button" },
            

          ],

          order : [[0,'asc']]
        });
      })
        
   
    }
  
  </script>

