    $(document).ready(function () {

      /* Setting permissions links in the buttons */
      $.getJSON('/admin/permissiondata', function (data) {
        data.map((item) => {
          if (item.permission == "YES") {
            id = item.email;
            let href = `/admin/changepermission?email=` + item.email + `&permission=NO`;
            document.getElementById(id).setAttribute('href', href);
          }

          else {
            id = item.email;
            let href = `/admin/changepermission?email=` + item.email + `&permission=YES`;

            document.getElementById(id).innerText = "Grant Permission";
            document.getElementById(id).setAttribute('class', 'btn btn-success');
            document.getElementById(id).setAttribute('href', href);
          }

        })
      })


    })

