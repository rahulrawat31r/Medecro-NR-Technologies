<script>
  /* Check whether a User already exits in teh DB*/
  function checkUser (e){
    $(document).ready (()=>{
      
      let p = "/admin/checkPatient?email=" + e.value;
      
      $.getJSON (p,(data)=>{
        
        if (data.status == "ok"){
          document.getElementById('errormsg').style.display = "none";
          document.getElementById('formbreakere').value = "ok";
          
        }
        
        else{
