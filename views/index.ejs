<html>
  <head>
    <title>User Login</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--Gooogle Auth-->

    <meta
      name="google-signin-client_id"
      content="15064425583-h6gqtm6l884069s03jtuvn8v892u1ukj.apps.googleusercontent.com"
    />
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
      rel="stylesheet"
    />
    <!-- MDB -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />

    <script
      src="https://code.jquery.com/jquery-3.6.1.js"
      integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/stylesheets/adminlogin.css" />

    <style>

      /* Marquee Img Style */
      #mar img {
        margin: 40px 15px;
        /* border : 2px solid rgb(10, 10, 10); */
        border-radius: 25px;

        box-shadow: 0px 0px 8px 1px grey;
      }

      /* Marquee Style */
      #mar {
        background-image: url("https://niaes.co.th/wp/wp-content/uploads/2018/10/our-product-1.png");
        background-size: contain;
        background-position: center;
        background-repeat: no-repeat;
      }

      /* Footer Style */
      footer {
        display: flex;
        align-items: center;
        justify-content: center;
        color: darkgrey;

        position: relative;
        bottom: 0%;
      }

      a {
        color: inherit;
      }
    </style>
  </head>
  <body>
    <!-- Section: Design Block -->
    <section class="">
      <!-- Jumbotron -->
      <div
        class="px-4 py-5 px-md-5 text-center text-lg-start"
        style="background-color: hsl(0, 0%, 96%)"
      >
        <div class="container">
          <div class="row gx-lg-5 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
              <h1 class="my-5 display-3 fw-bold ls-tight">
                NR <br />
                <span class="text-primary">Technologies</span>
              </h1>
              <p style="color: hsl(217, 10%, 50.8%)">
                
              </p>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
              <div class="card">
                <div class="card-body py-5 px-md-5">
                  <form action="/checkuser" method="post">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                      <input
                        type="email"
                        name="email"
                        id="form3Example3"
                        class="form-control"
                        required
                      />
                      <label class="form-label" for="form3Example3"
                        >Email address</label
                      >
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                      <input
                        type="password"
                        name="password"
                        id="form3Example4"
                        class="form-control"
                        required
                      />
                      <label class="form-label" for="form3Example4"
                        >Password</label
                      >
                    </div>

                    <!-- Submit button -->
                    <button
                      type="submit"
                      class="btn btn-primary btn-block mb-4"
                    >
                      Sign In
                    </button>

                    <!-- Error Line-->
                    <p><%=errorp%></p>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Products Marquee -->
      <div class="products">
        <marquee id="mar" behavior="" direction="">
          <% data.map((item)=>{ %>

          <img
            src="/images/<%=item.img%>"
            alt=""
            height="200vh"
            width="260vw"
          />
          <% }) %>
        </marquee>
      </div>
      <!-- Jumbotron -->
    </section>

    <footer>
      Developed By 
         &nbsp;<a
        href="https://www.linkedin.com/in/rahul-rawat-847323224/"
      >
        Rahul Rawat</a
      >
      &nbsp; &
         &nbsp;<a
        href="https://www.linkedin.com/in/rahul-rawat-847323224/"
      >
        Nishika Garg</a
      >
    </footer>
    <!-- Section: Design Block -->
  </body>
</html>
