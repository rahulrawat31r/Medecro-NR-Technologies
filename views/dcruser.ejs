  <script>
    function getAppointments (){
      $.ajax({
        url: '/getAppointments',
        type: 'GET',
        success: function (data) {
          if (data.length == 0){
            alert ('No Appointments Found');
            return;
          }

          for (i = 0 ; i < data.length ; i++){
            data[i]['button'] = `<button class = "btn btn-primary" onclick = "viewReport('${data[i].token}')">View Report</button>`;
          }

          var table = $("#user-table").DataTable();
          table.destroy();
          table = document.getElementById("user-table");
          table.innerHTML = "";
          table = document.getElementById("user-table");
          //   console.log (table.innerHTML);
          table.innerHTML = `<thead class = "table-dark">
                  <tr>
                    <th scope="col">Token No</th>
                    <th scope="col">Appointment Date</th> 
                    <th scope="col">Doctor Name</th>
                    <th scope="col">Speciality</th>
                    <th scope="col">Appointment Completed</th> 
                    <th scope="col">View Report</th> 
                  </tr>
                </thead>
                <tbody id ="tableWork">
                
                </tbody>  `;
            $("#user-table").DataTable({
              dom: "Bfrtip",
              buttons: [
              ],
              responsive: true,
              data: data,
              columns: [
                { data: "token" },
                { data: "adate" },
                { data: "doctorn" },
                { data: "speciality" },
                { data: "visit" },
                { data: "button" },
                
                
              ],
              order : [[0,'desc']]
            });
          
        }
      });
    }

    getAppointments();


    function viewReport (token){
      window.location.href = `/viewReport/${token}`;
    }
  </script>
