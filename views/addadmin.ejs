          function checkmail(e){
              $(document).ready (()=>{
                let x = e.value;
                let p = '/admin/checkadminmail?email=' + x; 

                $.getJSON(p,(data)=>{
                  if ( data.status){
                    document.getElementById('formbreakere').value = "ok";
                    document.getElementById('errormsg').style.display = "none"
                  }

                  else{
                    document.getElementById('errormsg').style.display = "block";
                    document.getElementById('formbreakere').value = "";
                  }
                })
              })
            }


            function checkfiletype(){
            var fileName = document.getElementById('img').value.toLowerCase();
            if(!fileName.endsWith('.png') && !fileName.endsWith('.jpg') && !fileName.endsWith('.jpeg')){
                alert('Please upload Image file only.');
                document.getElementById('img').value = '';
                document.getElementById('imgwala').style.borderColor = "red";
            }
        
            else{
              document.getElementById('imgwala').style.borderColor = "green";
            }


            

            }


            function updateSepc(val){
      
