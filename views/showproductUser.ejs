  <main style="margin-top: 58px">
    <div class="container pt-4">
      <!-- Section: Main chart -->

      <!-- Section: Main chart -->

      <!--Section: Sales Performance KPIs-->
      <section class="mb-4">
        <div class="card">
          <div class="card-header text-center py-3">
            <h5 class="mb-0 text-center">
              Add Products
            </h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover text-nowrap">
                <form action="/addproduct" method="post">
                  <div class="row">
                   

                    <div class="row">

                      <!-- Getting Doctor Contact-->
                      <div class="col-md-6 mb-4">
                        Doctor Contact
                        <div class="form-outline textBox" >
                          <input type="text" required id="dcontact" name="dcontact" class="form-control form-control-lg" /
                          oninput="areafiller()" >
                        </div>
                      </div>

                      <!-- Getting Doctor Name -->
                      <div class="col-md-6 mb-4">
                        Doctor Name
                        <div class="form-outline textBox">
                          <input type="text" required id="doctorname" name="doctorname" class="form-control form-control-lg" /
                            readonly value="Enter Contact Number !">
                        </div>
                      </div>

                      <!-- Getting Doctor Area-->
                      <div class="col-md-6 mb-4">
                        Doctor Area
                        <div class="form-outline textBox">
                         
                            <input type="text" required id="darea" name="darea" class="form-control form-control-lg" /
                              readonly value = "Enter Contact Number !">
                         
                        </div>
                      </div>

                      <!-- Product Name-->
                      <div class="col-md-6 mb-4">
                        Product Name
                        <div class="form-outline textBox">
                          <input type="text" required id="productname" name="productname"
                            class="form-control form-control-lg" />
                          
                        </div>
                      </div>

                      <div class="row"></div>

                      <!-- Chemist Number-->
                      <div class="col-md-6 mb-4">
                        Chemist Contact Number
                        <div class="form-outline textBox" >
                          <input type="text" required id="chemistphone" name="chemistphone" class="form-control form-control-lg" /
                          oninput="contactfillerChemist()" >
                        </div>
                      </div>


                      <!-- Chemsit Name-->
                      
                      <div class="col-md-6 mb-4">
                        Chemist Name
                        <div class="form-outline textBox" >
                          <input type="text" required id="chemistname" name="chemistname" class="form-control form-control-lg" /
                          readonly value = "Enter Contact Number !">
                        </div>
                      </div>

                    </div>

                    <div class="row">

                      <!-- Stockist Phone-->
                      <div class="col-md-6 mb-4">
                        Stockist Contact Number
                        <div class="form-outline textBox" >
                          <input type="text" required id="stockistphone" name="stockistphone" class="form-control form-control-lg" /
                          oninput="contactfillerStockist()" >
                        </div>
                      </div>

                      <!-- Stockist Name-->
                      <div class="col-md-6 mb-4">
                        Stockist Name
                        <div class="form-outline textBox" >
                          <input type="text" required id="stockistname" name="stockistname" class="form-control form-control-lg" /
                          readonly value = "Enter Contact Number !">
                        </div>

                        <!-- Hidden Ip Storing Block-->
                      </div>
                      
                      <div id="tohideip" class="tohideip">
                        <input type="text" required id="ip" name="ip" class="form-control form-control-lg" />
                       
                      </div>

                      <!-- Date of Registration of Product-->
                      <div class="col-md-6 mb-4">
                        Date
                        <div class="form-outline textBox">
                          <input type="date" required id="date" name="date" class="form-control form-control-lg" />
                        </div>

                      </div>

                    </div>
                    <div class="row">

                      <!-- User Email-->
                      <div class="col-md-6 mb-4">
                        Employee Email
                        <div class="form-outline textBox" >
                          <input type="text" required id="employeename" name="employeename"
                            class="form-control form-control-lg" readonly value=<%=username %>>
                        </div>
                      </div>

                      <!-- Working Under-->
                      <div class="col-md-6 mb-4">
                        Working Under
                        <select class="select form-control" id="workingwith" name="workingwith" required>
                          <option value="" disabled selected>Working With</option>

                        </select>
                      </div>
                    </div>

                    <!-- Submit Buttons-->
                    <div class="row">
                      <div class="d-flex justify-content-center pt-3">
                        <button type="reset" class="btn btn-light btn-lg">Reset all</button>
                        <button type="submit" id="submit-btn" class="btn btn-warning btn-lg ms-2">Submit form</button>
                      </div>
                    </div>

                    <!-- Prevent from submitting with no particular doctor, stockist and chemist -->
                    <input type="text" name="formblockerd" id="formblockerd" class="tohideip" required value = "">
                    <input type="text" name="formblockerc" id="formblockerc" class="tohideip" required value = "">
                    <input type="text" name="formblockers" id="formblockers" class="tohideip" required value = "">

                </form>
              </table>
            </div>
          </div>
        </div>

        <!-- Data Section-->
        <div class="card">
          <div class="card-header text-center py-3">
            <h5 class="mb-0 text-center">
              <strong>Products</strong>
            </h5>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover text-nowrap" id="user-table">
                <thead>
                  <tr>
                    <th scope="col">Doctor Name</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Chemist Name</th>
                    <th scope="col">Stockist Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Employee Email</th>
                    <th scope="col">Working With</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- Table Data -->

                  <% data.map((item)=>{ %>
                    <tr>
                      <td scope="row">
                        <%=item.doctorname%>
                      </td>
                      <td scope="row">
                        <%=item.productname%>
                      </td>
                      <td scope="row">
                        <%=item.chemistname%>
                      </td>
                      <td scope="row">
                        <%=item.stockistname%>
                      </td>
                      <td scope="row">
                        <%=item.date%>
                      </td>
                      <td scope="row">
                        <%=item.employeename%>
                      </td>
                      <td scope="row">
                        <%=item.workingwith%>
                      </td>

                      <!-- Delete Button -->
                      <td scope="row"><a class="btn btn-danger"
                          href="/deleteproduct?productid=<%=item.productid%>&adder=<%=adminemail%>">Delete</a></td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>

