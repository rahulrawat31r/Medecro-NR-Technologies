  <script>

    // Api for downloading the data from the table
    $(document).ready(function () {
      $('#user-table').DataTable({
        dom: 'Bfrtip',
        buttons: [
        {
          extend: "pdfHtml5",
          orientation: "landscape",
          pageSize: "A4", // You can also use "A1","A2" or "A3", most of the time "A3" works the best.
          text: "PDF",
          titleAttr: "PDF",
        },
        "excel",
        "copy",
      ],
      });



      $('#doctorname').css('border','1px solid red');
      $('#chemistname').css('border','1px solid red');
      $('#stockistname').css('border','1px solid red');

      /* For Getting the IP Address of the User */
    $(document).ready(function () {

      $.getJSON("https://api.ipify.org?format=json", function (data) {
        $('#ip').val(data.ip)

      })

      })
    });

    $(document).ready(function () {


    /*For Getting the Admin Names */
    $.getJSON('/getworkingwith', function (data) {
        $('#workingwith').empty()
        $('#workingwith').append($('<option value selected disabled>').text('Select Working With'))
        data.map((item) => {
            $('#workingwith').append($('<option>').text(item.name).val(item.name))
        })
    })


    })
  </script>

